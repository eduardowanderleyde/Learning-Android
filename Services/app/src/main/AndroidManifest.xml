<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Services"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OnStartBindingActivity"
            android:exported="false" />
        <activity
            android:name=".MusicPlayerWithBindingActivity"
            android:exported="false" />
        <activity
            android:name=".MusicPlayerNoBindingActivity"
            android:exported="false" />
        <activity
            android:name=".MusicPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".WorkerThreadServiceActivity"
            android:exported="false" />
        <activity
            android:name=".MainThreadServiceActivity"
            android:exported="false" />
        <service
            android:name=".MusicPlayerBindingService"
            android:enabled="true"
            android:exported="false"></service>

        <service
            android:name=".MusicPlayerService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".WorkerThreadService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".MainThreadService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>